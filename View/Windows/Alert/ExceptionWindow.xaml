<Window x:Class="BeautyBrows.View.Windows.Alert.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautyBrows.View.Windows.Alert"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="ExceptionWindow" Height="100" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Возникла ошибка"/>
            <TextBlock Text="Код ошибки:"/>
            <Button 
                Name="ButtonOk" 
                Click="ButtonOk_Click" 
                Content="Ок"
                />
        </StackPanel>
    </Grid>
</Window>
