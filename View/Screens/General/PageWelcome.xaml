<Page x:Class="BeautyBrows.View.Screens.General.PageWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyBrows.View.Screens.General"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWelcome">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button 
                Name="ButtonUser" 
                Click="ButtonUser_Click"
                Content="Продолжить"
                Style="{StaticResource ButtonProceedAsUser}"
                />
            <Button 
                Name="ButtonAdmin" 
                Click="ButtonAdmin_Click"
                Content="Войти с паролем"
                Style="{StaticResource ButtonProceedAsAdmin}"
                />
        </StackPanel>
    </Grid>
</Page>
